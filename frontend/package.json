{
  "name": "@gc-digital-talent",
  "private": true,
  "workspaces": [
    "admin",
    "common",
    "talentsearch",
    "indigenousapprenticeship"
  ],
  "scripts": {
    "reports:clean": "rm -f cypress/results/output-*.xml",
    "reports:merge": "jrm cypress/results/combined.xml cypress/results/output-*.xml",
    "e2e": "npm run e2e:open",
    "e2e:open": "cypress open",
    "e2e:run": "npm run e2e:run:all",
    "e2e:run:all": "cypress run --browser=chrome --spec cypress/integration/**/*${E2E_FILTER:-}*.spec.js",
    "e2e:run:inspect": "cypress run --browser=chrome --spec cypress/integration/**/*${E2E_FILTER:-language-selection}*.spec.js --no-exit --headed"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "*",
    "@storybook/addon-links": "*",
    "@storybook/builder-webpack5": "*",
    "@storybook/manager-webpack5": "*",
    "@storybook/react": "^6.4.20",
    "cypress": "^9.6.0",
    "cypress-terminal-report": "^3.5.2",
    "junit-report-merger": "^3.0.5",
    "storybook-addon-intl": "^2.4.1"
  }
}
