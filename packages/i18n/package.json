{
  "name": "@gc-digital-talent/i18n",
  "license": "AGPL-3.0",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "env NODE_ENV=production tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup",
    "watch": "tsup --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "tsc": "tsc --project tsconfig.json --noEmit",
    "test": "jest --detectOpenHandles --forceExit",
    "check-intl": "node ./dist/cli.js",
    "intl-extract": "formatjs extract './src/**/*.{ts,tsx}' --ignore './**/*.d.ts' --out-file src/lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "intl-compile": "formatjs compile src/lang/fr.json --ast --out-file src/lang/frCompiled.json",
    "postbuild": "cpy --cwd=src/lang frCompiled.json ../../dist"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "dependencies": {
    "@gc-digital-talent/graphql": "*"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.2.7",
    "@gc-digital-talent/eslint-config": "*",
    "@swc/core": "^1.4.5",
    "@types/react": "^18.2.64",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "history": "^5.3.0",
    "jest": "^29.7.0",
    "jest-presets": "*",
    "js-yaml": "^4.1.0",
    "json-stable-stringify": "^1.1.1",
    "react": "^18.2.0",
    "react-intl": "^6.6.2",
    "react-router-dom": "^6.22.2",
    "tsconfig": "*",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "yargs": "^17.7.2"
  }
}
