{
  "name": "@gc-digital-talent/i18n",
  "license": "AGPL-3.0",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "check-intl": "./dist/cli.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf dist && env NODE_ENV=production tsup",
    "build:intl-cli": "npm run build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup",
    "watch": "tsup --watch",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "tsc": "tsc --project tsconfig.json --noEmit",
    "test": "jest --detectOpenHandles --forceExit",
    "check-intl": "node ./dist/cli.js",
    "intl-extract": "formatjs extract './src/**/*.{ts,tsx}' --ignore './**/*.d.ts' --out-file src/lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "intl-compile": "formatjs compile src/lang/fr.json --ast --out-file src/lang/frCompiled.json",
    "postbuild": "cpy --cwd=src/lang frCompiled.json ../../dist"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "dependencies": {
    "@gc-digital-talent/graphql": "*",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.0.4",
    "@formatjs/ts-transformer": "^3.12.0",
    "@swc/core": "^1.3.42",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.10",
    "cpy-cli": "^4.2.0",
    "eslint": "^8.37.0",
    "eslint-config-custom": "*",
    "history": "^5.3.0",
    "jest": "^29.5.0",
    "jest-presets": "*",
    "react": "^18.2.0",
    "react-intl": "^6.3.2",
    "react-router-dom": "^6.10.0",
    "rimraf": "^4.4.1",
    "tsconfig": "*",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "yargs": "^17.7.1"
  }
}
