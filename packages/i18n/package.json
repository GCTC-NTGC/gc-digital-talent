{
  "name": "@gc-digital-talent/i18n",
  "license": "AGPL-3.0",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "check-intl": "./dist/cli.js"
  },
  "files": [
    "dist/**",
    "src/lang/frCompiled.json"
  ],
  "scripts": {
    "build": "tsup --entry src/index.tsx --entry src/cli.ts  --dts --external react --minify",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "watch": "tsup src/index.tsx  --watch --dts --external react --minify",
    "check-intl": "./dist/cli.js",
    "intl-extract": "formatjs extract './src/**/*.{ts,tsx}' --ignore './**/*.d.ts' --out-file src/lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "intl-compile": "formatjs compile src/lang/fr.json --ast --out-file src/lang/frCompiled.json",
    "postinstall": "npm run intl-extract && npm run intl-compile",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "test": "jest"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "dependencies": {
    "@gc-digital-talent/graphql": "*",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@formatjs/cli": "^5.1.12",
    "@formatjs/ts-transformer": "^3.11.6",
    "@swc/core": "^1.3.35",
    "@types/jest": "^26.0.22",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "history": "^5.3.0",
    "jest": "^29.4.2",
    "jest-presets": "*",
    "react": "^18.2.0",
    "react-intl": "^6.2.8",
    "react-router-dom": "^6.8.1",
    "tsconfig": "*",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5",
    "yargs": "^17.6.2"
  }
}
