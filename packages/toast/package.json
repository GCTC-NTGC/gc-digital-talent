    "@swc/core": "^1.3.37",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "react": "^18.2.0",
    "rimraf": "^4.1.3",
    "tsconfig": "*",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5"
  }
