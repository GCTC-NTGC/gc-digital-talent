{
  "name": "@gc-digital-talent/toast",
  "license": "AGPL-3.0",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup --entry src/index.tsx --entry src/cli.ts --format esm,cjs --dts --external react --minify",
    "clean": "rm -rf dist",
    "watch": "tsup src/index.tsx --format esm,cjs --watch --dts --external react --minify",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "tsc": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.15",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@storybook/react": "^6.5.16",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "react": "^18.2.0",
    "tsconfig": "*",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5"
  }
}
