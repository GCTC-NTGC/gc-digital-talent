{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext", "esnext.intl", "es2017.intl", "es2018.intl"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@common/*": ["../../frontend/common/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "*/node_modules",
    "!*/node_modules/@types"
  ]
}
