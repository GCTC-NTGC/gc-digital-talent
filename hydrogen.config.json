{
  "info": {
    "code": "https://github.com/hydrogen-css/hydrogen",
    "docs": "https://hydrogen.design/",
    "feedback": "https://forms.office.com/r/vz80dsUabZ",
    "roadmap": "https://github.com/orgs/hydrogen-css/projects/3/views/3",
    "settings": "https://hydrogen.design/en/docs/configuration/"
  },
  "temp": [
    "../*/src/views/*.html"
  ],
  "input": [
    "apps/web/public",
    "apps/web/src/components",
    "apps/web/src/pages",
    "apps/web/src/styles",
    "packages/forms/src",
    "packages/toast/src",
    "packages/ui/src"
  ],
  "output": "apps/web/src/assets/css",
  "modes": {
    "method": "toggle",
    "dark": {
      "auto_apply_styles": true,
      "swap_default_modifiers": true
    }
  },
  "processing": {
    "include_reset_css": false,
    "export_variable_file": false,
    "browser_prefix_css": true,
    "minify_css": true,
    "error_recovery": false,
    "write_css_file": true
  },
  "logging": {
    "generate_logs": false,
    "verbose_console_output": false
  },
  "media": {
    "base_key": "base",
    "queries": [
      {
        "key": "print",
        "query": "@media print"
      },
      {
        "key": "p-tablet",
        "query": "@media screen and (min-width: 48em)"
      },
      {
        "key": "l-tablet",
        "query": "@media screen and (min-width: 67.5em)"
      },
      {
        "key": "laptop",
        "query": "@media screen and (min-width: 80em)"
      },
      {
        "key": "desktop",
        "query": "@media screen and (min-width: 100em)"
      }
    ]
  },
