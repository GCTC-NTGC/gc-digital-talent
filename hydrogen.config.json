{
  "info": {
    "docs": "https://beta.hydrogen.design",
    "settings": "https://beta.hydrogen.design/en/docs/setup/configuration/",
    "code": "https://github.com/hydrogen-design-system/hydrogen",
    "feedback": "https://forms.office.com/r/vz80dsUabZ",
    "roadmap": "https://github.com/orgs/hydrogen-design-system/projects/1"
  },
  "temp": ["../*/src/views/*.html"],
  "input": [
    "frontend/common/src/components",
    "frontend/common/src/styles",
    "frontend/admin/src/js/components",
    "apps/web/src/components",
    "apps/web/src/pages"
  ],
  "output": "frontend/common/src/css",
  "modes": {
    "dark": {
      "automatic": true,
      "method": "toggle"
    }
  },
  "processing": {
    "reset_styles": true,
    "prefixing": true,
    "minification": true,
    "var_export": false
  },
  "logging": {
    "logs": false,
    "timers": false,
    "verbose": false
  },
  "media": {
    "base_key": "base",
    "queries": [
      {
        "key": "print",
        "query": "print"
      },
      {
        "key": "p-tablet",
        "query": "screen and (min-width: 48em)"
      },
      {
        "key": "l-tablet",
        "query": "screen and (min-width: 67.5em)"
      },
      {
        "key": "laptop",
        "query": "screen and (min-width: 80em)"
      },
      {
        "key": "desktop",
        "query": "screen and (min-width: 100em)"
      }
    ]
  },
  "themes": [
    {
      "key": "default",
      "typography": [
        {
          "size": "100%",
          "line_height": "1.4",
          "query_key": "base",
          "type_scale": "1.2"
        },
        {
          "size": "112.5%",
          "line_height": "1.4",
          "query_key": "desktop",
          "type_scale": "1.25"
        }
      ],
      "colors": [
