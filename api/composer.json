{
  "name": "gc-digital-talent/api",
  "type": "project",
  "description": "The GC Digital Talent API.",
  "keywords": [
    "canada",
    "talent",
    "api"
  ],
  "license": "AGPL-3.0",
  "require": {
    "php": "^8.1",
    "devnoiseconsulting/laravel-scout-postgres-tsvector": "^9.1",
    "doctrine/dbal": "^3.1",
    "guzzlehttp/guzzle": "^7.4",
    "laravel/framework": "^10.0",
    "laravel/scout": "^10.5",
    "laravel/tinker": "^2.6",
    "lcobucci/clock": "^3.0.0",
    "lcobucci/jwt": "^5.0.0",
    "mll-lab/graphql-php-scalars": "^6.2",
    "mll-lab/laravel-graphiql": "^3.0",
    "nuwave/lighthouse": "^6.15",
    "santigarcor/laratrust": "^8.0",
    "spatie/laravel-activitylog": "^4.7",
    "staudenmeir/eloquent-has-many-deep": "^1.18",
    "web-token/jwt-core": "^3.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9.1",
    "laravel/pint": "^1.11",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^7.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/",
      "Database\\Helpers\\": "database/helpers/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1.9"
    },
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "php artisan lighthouse:ide-helper"
    ]
  }
}
