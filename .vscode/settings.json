{
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true
  },
  "php.suggest.basic": false,
  "phpcs.standard": "./ruleset.xml",
  "workbench.settings.useSplitJSON": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.workingDirectories": [
    "./apps/web",
    "./apps/playwright",
    {
      "pattern": "./packages/*"
    }
  ],
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[graphql]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    // See: https://github.com/microsoft/vscode/issues/1679
    "files.trimTrailingWhitespace": false
  },
  "vscode-graphql.useSchemaFileDefinitions": true,
  "cSpell.customDictionaries": {
    "project-words": {
      "name": "project-words",
      "path": "${workspaceRoot}/.vscode/project-words.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false // Disable the `internal-terms` dictionary
  },
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "package.json",
    "composer.json",
    "composer.lock",
    "tsconfig.json",
    ".eslintrc",
    "hydrogen.config.json"
  ],
  "jest.jestCommandLine": "test",
  "cSpell.ignoreRegExpList": [
    "/id\\: \\\"[A-Za-z0-9+\\/]{6}\\\"/g",
    "/\"[A-Za-z0-9+\\/]{6}\\\": {/g"
  ],
  "[php]": {
    "editor.defaultFormatter": "open-southeners.laravel-pint"
  },
  "files.associations": {
    "**/public/config.ejs": "plaintext"
  },
  "laravel-pint.enable": true,
  "laravel-pint.configPath": "api/pint.json",
  "laravel-pint.executablePath": "api/vendor/bin/pint",
  "terminal.integrated.profiles.linux": {
    "Maintenance": {
      "path": "docker",
      "args": [
        "compose",
        "run",
        "--rm",
        "--workdir=/var/www/html",
        "maintenance",
        "bash"
      ],
      "overrideName": true,
      "icon": "terminal-ubuntu"
    }
  },
  "terminal.integrated.profiles.osx": {
    "Maintenance": {
      "path": "docker",
      "args": [
        "compose",
        "run",
        "--rm",
        "--workdir=/var/www/html",
        "maintenance",
        "bash"
      ],
      "overrideName": true,
      "icon": "terminal-ubuntu"
    }
  },
  "tailwindCSS.experimental.classRegex": [
    [
      "([\"'`][^\"'`]*.*?[\"'`])",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ]
}
