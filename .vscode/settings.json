{
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true
  },
  "php.suggest.basic": false,
  "phpcs.standard": "./ruleset.xml",
  "workbench.settings.useSplitJSON": true,
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": ["frontend/admin", "frontend/common", "frontend/indigenousapprenticeship",  "frontend/talentsearch"],
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[graphql]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    // See: https://github.com/microsoft/vscode/issues/1679
    "files.trimTrailingWhitespace": false
  },
  "vscode-graphql.useSchemaFileDefinitions": true,
  "cSpell.customDictionaries": {

    "project-words": {
      "name": "project-words",
      "path": "${workspaceRoot}/.vscode/project-words.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false // Disable the `internal-terms` dictionary
  },
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "package.json",
    "composer.json",
    "composer.lock",
    "generated.ts",
    "tsconfig.json",
    ".eslintrc",
    "hydrogen.config.json"
  ],
  "jest.jestCommandLine": "test"
}
