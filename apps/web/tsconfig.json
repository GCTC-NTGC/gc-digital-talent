{
  "extends": "tsconfig/app.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@gc-digital-talent/*": ["../../../packages/*/src"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "globals.d.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "!node_modules/@types",
    "*/node_modules",
    "!*/node_modules/@types",
    "**/src/gql"
  ]
}
