{
  "extends": "tsconfig/app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@gc-digital-talent/*": ["../../../packages/*/src"],
      "~/*": ["./src/*"],
      "./+types/*": ["./.react-router/types/src/+types/*"]
    },
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "routes.ts",
    ".react-router/types/**/*"
  ],
  "exclude": ["**/node_modules", "dist"]
}
