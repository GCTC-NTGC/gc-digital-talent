{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["globals.d.ts", "constants", "fixtures", "tests", "utils"],
  "exclude": ["**/node_modules", "**/.*/"]
}
