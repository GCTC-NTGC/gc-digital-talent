{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "eslint.config.mjs",
    "playwright.config.ts",
    "playwright-ct.config.ts",
    "constants",
    "fixtures",
    "tests",
    "utils"
  ],
  "exclude": ["**/node_modules", "**/.*/"]
}
