{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "build:css", "intl-compile", "codegen"],
      "inputs": ["src/**", "package.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "build:css": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["src/assets/css/hydrogen.css"]
    },
    "codegen": {
      "inputs": ["src/**/*.graphql", "../../packages/**/src/**/*.graphql"],
      "outputs": ["src/api/generated.ts", "src/index.ts"],
      "outputMode": "new-only"
    },
    "dev": {
      "dependsOn": ["^build", "build:css", "intl-compile", "codegen"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "package.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "watch": {
      "dependsOn": ["build:css", "intl-compile", "codegen"],
      "cache": false,
      "persistent": true
    },
    "build:intl-cli": {
      "inputs": ["src/cli.ts"],
      "outputs": ["dist/cli.js"],
      "outputMode": "new-only"
    },
    "intl-extract": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["src/lang/en.json"],
      "outputMode": "new-only"
    },
    "intl-compile": {
      "inputs": ["src/lang/en.json", "src/lang/fr.json"],
      "dependsOn": ["intl-extract"],
      "outputs": ["src/lang/*{Compiled}.json"],
      "outputMode": "new-only"
    },
    "check-intl": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "src/lang/en.json", "src/lang/fr.json"],
      "dependsOn": ["build:intl-cli", "intl-compile"],
      "cache": false,
      "outputMode": "new-only"
    },
    "storybook": {
      "dependsOn": ["codegen", "intl-compile"],
      "outputs": []
    },
    "build-storybook": {
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "test": {},
    "clean": {
      "cache": false
    },
    "check-integrity": {
      "cache": false
    },
    "e2e": {},
    "e2e:open": {},
    "e2e:run": {},
    "e2e:run:all": {
      "dependsOn": ["^e2e:run:all"]
    },
    "e2e:run:inspect": {},
    "lint": {},
    "tsc": {}
  }
}
