{
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "intl-compile", "codegen"],
      "inputs": ["src/**", "package.json"],
      "outputs": ["dist/**"]
    },
    "build:css": {
        "outputs": ["src/assets/css/hydrogen.css"]
    },
    "codegen": {
      "outputs": ["src/api/generated.ts", "src/index.ts"]
    },
    "dev": {
      "dependsOn": ["^build", "build:css", "intl-compile", "codegen"],
      "inputs": ["src/**", "package.json"],
      "outputs": ["dist/**"]
    },
    "watch": {
      "dependsOn": ["build:css", "intl-compile", "codegen"],
      "cache": false
    },
    "build:intl-cli": {
      "outputs": ["dist/cli.js"]
    },
    "intl-extract": {
      "outputs": ["src/lang/en.json"]
    },
    "intl-compile": {
      "dependsOn": ["^intl-compile", "intl-extract"],
      "outputs": ["src/lang/*{Compiled}.json"]
    },
    "check-intl": {
      "dependsOn": ["build:intl-cli", "intl-compile", "intl-extract"],
      "cache": false
    },
    "storybook": {
      "dependsOn": ["codegen", "intl-compile"],
      "outputs": []
    },
    "build-storybook": {
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "check-integrity": {
      "cache": false
    },
    "e2e": {},
    "e2e:open": {},
    "e2e:run": {},
    "e2e:run:all": {
      "dependsOn": ["^e2e:run:all"]
    },
    "e2e:run:inspect": {},
    "lint": {},
    "tsc": {}
  }
}
