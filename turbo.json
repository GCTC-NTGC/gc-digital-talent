{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "**/.env", "pnpm-workspace.yaml"],
  "pipeline": {
    "build": {
      "dependsOn": ["^intl-compile", "intl-compile", "^codegen"],
      "inputs": ["src/**", "package.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "build:css": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "../../hydrogen.config.json"],
      "outputs": ["src/assets/css/hydrogen.css"]
    },
    "codegen": {
      "inputs": [
        "../../api/storage/app/lighthouse-schema.graphql",
        "../../packages/**/src/**/*.ts",
        "../../packages/**/src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "outputs": ["src/index.ts"],
      "outputMode": "new-only",
      "cache": false
    },
    "dev": {
      "dependsOn": ["intl-compile", "^intl-compile", "^codegen"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "package.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "watch": {
      "dependsOn": ["intl-compile", "^intl-compile"],
      "cache": false,
      "persistent": true
    },
    "build:intl-cli": {
      "inputs": ["src/cli.ts"],
      "outputs": ["dist/cli.js"],
      "outputMode": "new-only"
    },
    "intl-extract": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["src/lang/en.json"],
      "outputMode": "new-only"
    },
    "intl-compile": {
      "inputs": [
        "src/lang/en.json",
        "src/lang/fr.json",
        "src/lang/crg.json",
        "src/lang/crk.json",
        "src/lang/ojw.json",
        "src/lang/mic.json"
      ],
      "dependsOn": ["intl-extract", "^intl-extract"],
      "outputs": ["src/lang/*{Compiled}.json"],
      "cache": false,
      "outputMode": "new-only"
    },
    "check-intl": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/lang/en.json",
        "src/lang/fr.json",
        "src/lang/crg.json",
        "src/lang/crk.json",
        "src/lang/ojw.json",
        "src/lang/mic.json"
      ],
      "dependsOn": ["intl-compile", "^intl-compile"],
      "cache": false,
      "outputMode": "new-only"
    },
    "storybook": {
      "dependsOn": ["^codegen", "^intl-compile", "intl-compile"],
      "outputs": []
    },
    "build-storybook": {
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "test": {
      "outputMode": "new-only"
    },
    "clean": {
      "cache": false
    },
    "e2e:playwright": {},
    "lint": {
      "inputs": [
        "../../packages/eslint-config-custom/index.js",
        "../../packages/eslint-config-custom/react.js",
        "**/*.{ts,tsx}",
        "!node_modules"
      ]
    },
    "tsc": {}
  }
}
