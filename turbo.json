{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "build:css", "intl-compile", "codegen"],
      "inputs": ["src/**", "package.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "build:css": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "../../hydrogen.config.json"],
      "outputs": ["src/assets/css/hydrogen.css"]
    },
    "codegen": {
      "inputs": [
        "../../api/storage/app/lighthouse-schema.graphql",
        "src/**/*.graphql",
        "../../packages/**/src/**/*.graphql",
        "../../packages/**/src/**/*.ts",
        "../../packages/**/src/**/*.tsx",
        "../../apps/e2e/**/src/**/*.graphql",
        "../../apps/e2e/**/src/**/*.ts",
        "../../apps/e2e/**/src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "outputs": ["src/api/generated.ts", "src/index.ts"],
      "outputMode": "new-only",
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build", "build:css", "intl-compile", "codegen"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "package.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "watch": {
      "dependsOn": ["build:css", "intl-compile", "codegen"],
      "cache": false,
      "persistent": true
    },
    "build:intl-cli": {
      "inputs": ["src/cli.ts"],
      "outputs": ["dist/cli.js"],
      "outputMode": "new-only"
    },
    "intl-extract": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["src/lang/en.json"],
      "outputMode": "new-only"
    },
    "intl-compile": {
      "inputs": [
        "src/lang/en.json",
        "src/lang/fr.json",
        "src/lang/crg.json",
        "src/lang/crk.json",
        "src/lang/ojw.json",
        "src/lang/mic.json"
      ],
      "dependsOn": ["intl-extract"],
      "outputs": ["src/lang/*{Compiled}.json"],
      "cache": false,
      "outputMode": "new-only"
    },
    "check-intl": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/lang/en.json",
        "src/lang/fr.json",
        "src/lang/crg.json",
        "src/lang/crk.json",
        "src/lang/ojw.json",
        "src/lang/mic.json"
      ],
      "dependsOn": ["build:intl-cli", "intl-compile"],
      "cache": false,
      "outputMode": "new-only"
    },
    "storybook": {
      "dependsOn": ["codegen", "intl-compile"],
      "outputs": []
    },
    "build-storybook": {
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "test": {
      "outputMode": "new-only"
    },
    "clean": {
      "cache": false
    },
    "check-integrity": {
      "cache": false
    },
    "e2e": {},
    "e2e:open": {},
    "e2e:playwright": {},
    "e2e:run": {},
    "e2e:run:all": {
      "dependsOn": ["^e2e:run:all"]
    },
    "e2e:run:inspect": {},
    "lint": {
      "inputs": ["../../packages/eslint-config-custom/index.js"]
    },
    "tsc": {}
  }
}
